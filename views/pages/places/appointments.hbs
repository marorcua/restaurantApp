<div class="container restaurant-list">
    {{#each restaurants}}
    <div class="row justify-content-center">
        <div class="col-md-2">
            {{#user}}
            <a href="/users/{{id}}">Name: {{name}}</a>
            {{/user}}
        </div>
        <div class="col-md-5">
            <h3>{{name}}</h3>
            <p>Price: {{price}}</p>
            <p>{{address}}</p>
        </div>
        <div class="col-md-5">
            <img src="{{photoSearch}}" alt="restaurant-photo">
            <a href="/places/appointment/delete/{{lookup ../appointmentId @key}}">Delete appointment</a>
        </div>

    </div>
    <hr>
    {{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>