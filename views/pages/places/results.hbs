<div class="container">
    {{#each restaurants}}
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3>Name: {{name}}</h3>
            <p>Price: {{price}}</p>
            <p>Rating: {{rating}}</p>
            <p>User ratings: {{user_ratings}}</p>
            <p>{{address}}</p>
        </div>
        <div class="col-md-4">
            <img src="{{photoSearch}}" alt="restaurant-photo">
            <a href="/places/favorites/delete/{{id}}">Delete restaurant</a>
        </div>

    </div>
    <hr>
    {{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>