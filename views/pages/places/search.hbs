<div class="container">
    <form action="/places" method="POST">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" placeholder="City" name='city'>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="radius">Radius</label>
                    <input type="text" class="form-control" id="radius" placeholder="Radius (m)" name='radius'>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="rankBy">Rank by</label>
                    <select id="rankBy" name="rankBy" class="form-control">
                        <option value="select">Select</option>
                        <option value="rating">Rating</option>
                        <option value="distance">Distance</option>
                        <option value="name">Name</option>
                        <option value="price">Price</option>
                        <option value="user_ratings">User ratings</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="desdencingRadio" id="descending"
                        value="descending" checked>
                    <label class="form-check-label" for="descending">
                        Descending
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="desdencingRadio" id="ascending"
                        value="ascending">
                    <label class="form-check-label" for="ascending">
                        Ascending
                    </label>
                </div>
            </div>
            <div class="col-md-1">

                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
    {{#each results}}
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3>Name: {{name}}</h3>
            <button class="like">&#9825</button>
            <p>Price: {{price}}</p>
            <p>Rating: {{rating}}</p>
            <p>User ratings: {{user_ratings}}</p>
            <p>{{address}}</p>
        </div>
        <div class="col-md-6">
            <img src="{{photoSearch}}" alt="restaurant-photo">
        </div>

    </div>
    <hr>
    {{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/restaurant-app.js"></script>