<div class="container">
    <h1>{{name}}</h1>

    <form method="POST" action="/users/edit/{{id}}" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value='{{email}}'>
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value='{{name}}'>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" value='{{description}}'>
        </div>
        <div class="form-group">
            <label for="birthDay">Date of birth</label>
            <input type="date" class="form-control" id="birthDay" name="birthDay" value='{{birthDay}}'>
        </div>
        <div class="form-group">
            <label for="favoriteCuisine1">Favorite Cuisine 1</label>
            <select id="favoriteCuisines" name="favoriteCuisines" class="form-control">
                <option value="spanish">Spanish Food</option>
                <option value="chinese">Chinese Cuisine</option>
                <option value="japanese">Japanese Food</option>
                <option value="italian">Italian Food</option>
            </select>
        </div>
        <div class="form-group">
            <label for="favoriteCuisine2">Favorite Cuisine 2</label>
            <select id="favoriteCuisines" name="favoriteCuisines" class="form-control">
                <option value="spanish">Spanish Food</option>
                <option value="chinese">Chinese Cuisine</option>
                <option value="japanese">Japanese Food</option>
                <option value="italian">Italian Food</option>
            </select>
        </div>
        <div class="form-group">
            <label for="favoriteCuisine3">Favorite Cuisine 3</label>
            <select id="favoriteCuisines" name="favoriteCuisines" class="form-control">
                <option value="spanish">Spanish Food</option>
                <option value="chinese">Chinese Cuisine</option>
                <option value="japanese">Japanese Food</option>
                <option value="italian">Italian Food</option>
            </select>
        </div>
        <div class="form-group">
            <label for="userImage">Profile Image</label>
            <input type="file" class="form-control-file" id="userImage" name="userImage">
        </div>
        <button type="submit" class="btn btn-dark btn-block">Save profile</button>

        {{#if errorMessage}}
        <div id="error">
            <p>{{errorMessage}}</p>
        </div>
        {{/if}}
    </form>
</div>